<div class='' style='width: 140px; margin: 2rem auto 1rem'><a
    href='employees/create'
  >
    <button type='button' class='btn btn-warning p-3'>Add Employee</button>
  </a></div>
<div class='employee_list'>
  {{#each employeeList}}
    <section class='100-vh' style='background-color: #181A20;'>
      <div class='container py-3 h-100'>
        <div class='row d-flex justify-content-center align-items-center h-100'>
          <div class='col-12 col-sm-12'>

            <div class='card' style='border-radius: 15px;'>
              <div class='card-body text-center'>
                {{!-- <form
                  class='form-delete'
                  method='POST'
                  action='/employees/{{this._id}}?_method=DELETE'
                  style='display: inline-block;'
                >
                  <button class='btn btn-close tooltips'>
                    <span class='tooltiptext'>Kick &#128075;</span>
                  </button>
                </form> --}}

                <div class='mt-3 mb-4'>
                  <img
                    src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp'
                    class='rounded-circle img-fluid'
                    style='width: 100px;'
                  />
                </div>
                <h4 class='mb-2 name'>{{this.name}}</h4>
                <p class='text-muted mb-4'>@{{this.pos}}
                  <span class='mx-2'>|</span>
                  <a href='#!'>https://24h.dev</a></p>
                <div class='mb-4 pb-2 d-flex justify-content-evenly'>
                  <button
                    type='button'
                    class='btn btn-outline-primary rounded-circle rec-40'
                  >
                    <i class='fab fa-facebook-f fa-lg'></i>
                  </button>
                  <button
                    type='button'
                    class='btn btn-outline-primary rounded-circle rec-40'
                  >
                    <i class='fab fa-twitter fa-lg'></i>
                  </button>
                  <button
                    type='button'
                    class='btn btn-outline-primary rounded-circle rec-40'
                  >
                    <i class='fab fa-skype fa-lg'></i>
                  </button>
                </div>
                <button
                  type='button'
                  class='btn btn-success btn-rounded btn-lg mb-3'
                >
                  <a
                    class='btn_explore'
                    href='/employees/{{this.slug}}'
                  >Explore</a>
                </button>
                <div
                  class='d-flex justify-content-around text-center mt-5 mb-2 d-none'
                >
                  <div>
                    <p class='mb-2 h5'>{{this.age}}</p>
                    <p class='text-muted mb-0'>Age</p>
                  </div>
                  <div class='px-3'>
                    <p class='mb-2 h5'>{{this.gender}}</p>
                    <p class='text-muted mb-0'>Gender</p>
                  </div>
                  <div>
                    <p class='mb-2 h5'>$99</p>
                    <p class='text-muted mb-0'>Salary</p>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>
  {{/each}}
</div>