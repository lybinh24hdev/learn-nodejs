<div class='form mt-5'>
  <h2 class='form_title'>Add Employee</h2>
  <form class='row g-3' method='POST' action='/employees/store'>
    <div class='mb-3'>
      <label for='name' class='form-label'>Name</label>
      <input type='text' name='name' class='form-control' id='name' />
    </div>
    <div class='mb-3'>
      <label for='age' class='form-label'>Age</label>
      <input type='text' name='age' class='form-control' id='age' />
    </div>
    <div class='mb-3'>
      <label for='gender' class='form-label'>Gender</label>
      <select class='form-select w-50' name='gender' id='gender'>
        <option value='male'>Male</option>
        <option value='female'>Female</option>
      </select>
    </div>
    <div class='mb-3'>
      <label for='pos' class='form-label'>Level</label>
      <input type='text' name='pos' class='form-control' id='pos' />
    </div>
    <div class='mb-3'>
      <label for='videoId' class='form-label'>VideoId</label>
      <input type='text' name='videoId' class='form-control' id='videoId' />
    </div>

    <div class='col-auto m-auto mt-3 mb-2'>
      <button type='submit' class='btn btn-success'>Confirm</button>
    </div>
  </form>
</div>